<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pokeName_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:text="Pikachu"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="120dp" />

        <TextView
            android:id="@+id/natNum_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="14dp"
            android:text="#120"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="120dp" />

        <TextView
            android:id="@+id/species_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Species"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="120dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gender_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="3dp"
            android:paddingRight="23dp"
            android:text="Gender: F"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="143dp" />


        <TextView
            android:id="@+id/weight_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="weight: 19.1"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="143dp" />

        <TextView
            android:id="@+id/height_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="height: 12.8"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="165dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/defense_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="3dp"
            android:paddingRight="17dp"
            android:text="Defense: 6"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="214dp"
            tools:layout_editor_absoluteY="165dp" />

        <TextView
            android:id="@+id/attack_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="33dp"
            android:text="Attack: 4"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="165dp" />

        <TextView
            android:id="@+id/level_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: 2"
            android:textSize="12sp"
            android:paddingRight="26dp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="143dp" />

        <TextView
            android:id="@+id/hp_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hp: 2"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="143dp" />
    </LinearLayout>


</LinearLayout>